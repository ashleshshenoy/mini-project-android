<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#8596F5"
    tools:context=".Onboarding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F8FF"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="196dp"
                android:layout_height="52dp"
                android:text="Lets get started."
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_weight="23"
                android:text="Enter your details to get personalised diets, recommendations according to your goals."
                android:textColor="#3F51B5"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="295dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Username"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/usernameTextField"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:backgroundTint="#F6F8FF"
                android:ems="10"
                android:inputType="text"
                android:outlineProvider="none"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="295dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Height (cm)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/heightTextFeild"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:backgroundTint="#F6F8FF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:outlineProvider="none"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="295dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Weight (Kg)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/weightTextField"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:backgroundTint="#F6F8FF"
                android:ems="10"
                android:inputType="numberDecimal"
                android:outlineProvider="none"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="295dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Age "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/AgeTextField"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:backgroundTint="#F6F8FF"
                android:ems="10"
                android:inputType="number"
                android:outlineProvider="none"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Activity"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/activitySpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F6F8FF"
                android:backgroundTint="#F6F8FF" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Gender"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F6F8FF"
                android:backgroundTint="#F6F8FF" />

            <Button
                android:id="@+id/OnboardingDetailSubmitButton"
                android:layout_width="352dp"
                android:layout_height="60dp"
                android:layout_marginTop="35dp"
                android:text="Submit details" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>