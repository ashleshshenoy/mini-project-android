<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp"
    tools:context=".Analytics">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/customerborder"
          android:orientation="vertical"
          android:padding="15dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="You haven't tracked everything today! "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Track to get insights on nutrients, good/bad foods, and get healthy suggestions" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/textView15"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_weight="2"
              android:text="Track Your Meals"
              android:textColor="#FF7043" />

          <ImageView
              android:id="@+id/imageView7"
              android:layout_width="50dp"
              android:layout_height="24dp"
              app:srcCompat="@drawable/arrowright" />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="40dp"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_weight="0"
            android:foregroundGravity="left"
            app:srcCompat="@drawable/charticon" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Food log Analysis"
            android:textColor="#151515"
            android:textSize="20sp" />

      </LinearLayout>

      <TextView
          android:id="@+id/textView21"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="See your daily calorie intake and buget here. Track your meals everyday to get accurate daily insights." />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="20dp"
          android:background="@drawable/customerborder"
          android:orientation="vertical"
          android:padding="15dp">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Calorie Budget"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/calorieProgressPercentage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="30%"
              android:textColor="#FFA726"
              android:textSize="40dp" />

          <TextView
              android:id="@+id/calorieProgressText"
              android:layout_width="181dp"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:gravity="center"
              android:text="0/2000 calories" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bravo ! keep going and you'll soon see the difference" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Macronutrients Breakup"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView9"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:srcCompat="@drawable/protein" />

          <TextView
              android:id="@+id/textView26"
              android:layout_width="60dp"
              android:layout_height="fill_parent"
              android:gravity="center_vertical"
              android:paddingStart="10dp"
              android:text="Protein" />

          <TextView
              android:id="@+id/proteinProgressText"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:gravity="right|center_vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:text="0/14.4g"
              android:textSize="12dp" />

          <ProgressBar

              android:id="@+id/proteinProgressBar"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="80dp"
              android:layout_height="fill_parent"
              android:progress="10" />

          <TextView
              android:id="@+id/proteinProgressPercentage"
              android:layout_width="50dp"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:text="0%"
              android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView9"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:srcCompat="@drawable/fat" />

          <TextView
              android:id="@+id/textView26"
              android:layout_width="60dp"
              android:layout_height="fill_parent"
              android:gravity="center_vertical"
              android:paddingStart="10dp"
              android:text="Fat" />

          <TextView
              android:id="@+id/fatProgressText"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:gravity="right|center_vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:text="0/14.4g"
              android:textSize="12dp" />

          <ProgressBar
              android:id="@+id/fatProgressBar"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="80dp"
              android:layout_height="fill_parent"
              android:progress="50" />

          <TextView
              android:id="@+id/fatProgressPercentage"
              android:layout_width="50dp"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:text="0%"
              android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView9"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:srcCompat="@drawable/carb" />

          <TextView
              android:id="@+id/textView26"
              android:layout_width="60dp"
              android:layout_height="fill_parent"
              android:gravity="center_vertical"
              android:paddingStart="10dp"
              android:text="Carbs" />

          <TextView
              android:id="@+id/carbProgressText"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:gravity="right|center_vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:text="0/14.4g"
              android:textSize="12dp" />

          <ProgressBar
              android:id="@+id/carbsProgressBar"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="80dp"
              android:layout_height="fill_parent"
              android:progress="50" />

          <TextView
              android:id="@+id/carbsProgressPercentage"
              android:layout_width="50dp"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:text="0%"
              android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView9"
              android:layout_width="30dp"
              android:layout_height="30dp"
              app:srcCompat="@drawable/fibre" />

          <TextView
              android:id="@+id/textView26"
              android:layout_width="60dp"
              android:layout_height="fill_parent"
              android:gravity="center_vertical"
              android:paddingStart="10dp"
              android:text="Fibre" />

          <TextView
              android:id="@+id/fibreProgressText"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:gravity="right|center_vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:text="0/14.4g"
              android:textSize="12dp" />

          <ProgressBar
              android:id="@+id/fibreProgressBar"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="80dp"
              android:layout_height="fill_parent"
              android:progress="50" />

          <TextView
              android:id="@+id/fibreProgressPercentage"
              android:layout_width="50dp"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:text="0%"
              android:textSize="12dp" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="40dp"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_weight="0"
            android:foregroundGravity="left"
            app:srcCompat="@drawable/charticon" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Diet Composition Analysis"
            android:textColor="#151515"
            android:textSize="20sp" />

      </LinearLayout>

      <TextView
          android:id="@+id/textView18"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="Evaluate your macro intake and determine the sources of your calorie consumption" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="20dp"
          android:background="@drawable/customerborder"
          android:orientation="vertical"
          android:padding="15dp">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diet Compostiton Analysis"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateAnal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#030000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="start|left"
            android:layout_marginTop="40dp"
            android:foregroundGravity="left"
            android:paddingRight="20dp" />


      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="40dp"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_weight="0"
            android:foregroundGravity="left"
            app:srcCompat="@drawable/charticon" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="weekly trends"
            android:textColor="#151515"
            android:textSize="20sp" />

      </LinearLayout>

      <TextView
          android:id="@+id/textView32"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="See your daily calorie intake and buget here. Track your meals everyday to get accurate daily insights." />

      <androidx.fragment.app.FragmentContainerView
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/barchartContainer"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />


    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>