<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalTime">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="How fast do you want to reach your goal?"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/paceRecommendationText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="This is a good pace, but you would need to work a bit harder."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/perWeekGoalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="0.5 Kg"
            android:textColor="#000000"
            android:textSize="40dp" />


        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="per week"
            android:textColor="#000000"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/perWeekGoalSeekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:max="3"
            android:progress="1"
            android:progressBackgroundTint="#808080"
            android:progressTint="#9CCC65"
            android:splitTrack="false"
            android:thumbTint="#66BB6A" />

        <TextView
            android:id="@+id/timePeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#C9F8CB"
            android:gravity="center"
            android:padding="15dp" />

        <Button
            android:id="@+id/setPerWeekGoalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#747474"
            android:enabled="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Next"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>